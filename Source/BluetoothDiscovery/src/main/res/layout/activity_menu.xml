<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IR Temp - Raw GATT"
        android:id="@+id/button_ir_raw"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IR Temp - Interface"
        android:id="@+id/button_ir_interface"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IR Temp - Fast Poll Example"
        android:id="@+id/button_ir_fast_poll"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Probe Device - Interface"
        android:id="@+id/button_ir_probe"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HRM - Interface"
        android:id="@+id/button_hrm_interface"
        android:layout_gravity="center"/>
</LinearLayout>